{
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["dom", "es2018"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "luxon-angular-pipes": [
        "dist/luxon-angular-pipes/luxon-angular-pipes",
        "dist/luxon-angular-pipes"
      ]
    },
    "sourceMap": true,
    "target": "es2015",
    "types": ["jest"]
  }
}
